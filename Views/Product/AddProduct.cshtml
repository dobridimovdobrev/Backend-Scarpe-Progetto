@model Scarpe___Co_Progetto.Models.Product
@{
    ViewData["Title"] = "Add New Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">Add New Product</h2>

            <form asp-controller="Product" asp-action="AddProduct" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input type="text" asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input type="number" step="0.01" asp-for="Price" class="form-control">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MainImage" class="form-label">Main Image URL</label>
                    <input type="text" asp-for="MainImage" class="form-control">
                    <span asp-validation-for="MainImage" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Image2" class="form-label">Image 2 URL</label>
                    <input type="text" asp-for="Image2" class="form-control">
                    <span asp-validation-for="Image2" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Image3" class="form-label">Image 3 URL</label>
                    <input type="text" asp-for="Image3" class="form-control">
                    <span asp-validation-for="Image3" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Add Product</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}